<UserControl x:Class="Lessons.Lesson4.CustomLoading"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    
    <Grid x:Name="LayoutRoot" Background="Black">
        <Border VerticalAlignment="Center" HorizontalAlignment="Center" Height="400" Width="400"
                BorderBrush="White" BorderThickness="3" CornerRadius="8">
            <TextBlock x:Name="txtDisplay" Foreground="White" FontSize="16" Margin="12,12,12,12" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </Border>
    </Grid>
</UserControl>
